<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <property name="log.pattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight([%-5level]) [%-35.35(%thread)] [%X{TraceId:-TraceId}] [%X{RemoteIP:-RemoteIP}] --- %highlight(%-50.50(%logger{50})#%M\(%F:%L\)): %msg%n" />
    <property name="log.home" value="/app/logs" />
    <property name="log.fileName" value="auth-server" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.home}/${log.fileName}.log</file>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.home}/${log.fileName}-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.home}/${log.fileName}.error.log</file>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.home}/${log.fileName}-%d{yyyy-MM-dd}-%i.error.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <springProfile name="prod">
        <logger name="cn.opensrcdevelop" level="debug" />
        <!-- Spring framework logger -->
        <logger name="org.springframework" level="info" />
        <root level="info">
            <appender-ref ref="console" />
            <appender-ref ref="file" />
        </root>
    </springProfile>

    <springProfile name="dev">
        <logger name="com.lee" level="debug" additivity="false">
            <appender-ref ref="console" />
        </logger>
        <!-- Spring framework logger -->
        <logger name="org.springframework" level="debug" additivity="false">
            <appender-ref ref="console" />
        </logger>
        <root level="info">
            <appender-ref ref="console" />
        </root>
    </springProfile>
</configuration>