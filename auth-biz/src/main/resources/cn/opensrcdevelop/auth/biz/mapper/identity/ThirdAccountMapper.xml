<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.opensrcdevelop.auth.biz.mapper.identity.ThirdAccountMapper">

    <resultMap id="userBindingResultMap" type="cn.opensrcdevelop.auth.biz.entity.identity.ThirdAccount">
        <result column="unique_id" property="uniqueId" />
        <result column="create_time" property="createTime" />
        <association property="user" javaType="cn.opensrcdevelop.auth.biz.entity.user.User">
            <id column="user_id" property="userId" />
            <result column="username" property="username" />
        </association>
    </resultMap>

    <select id="searchUserBindings" resultMap="userBindingResultMap">
        SELECT
            t1.user_id,
            t1.unique_id,
            t2.username,
            t1.create_time
        FROM
            t_third_account t1
            LEFT JOIN t_user t2 ON t1.user_id = t2.user_id
        WHERE
            t1.registration_id = #{registrationId}
        <if test="keyword != null and keyword != ''">
            AND t2.username LIKE CONCAT ( '%', #{keyword}, '%' )
        </if>
    </select>
</mapper>